generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String     @id @default(cuid())
  extId             String     @unique
  attributes        Json
  username          String
  email             String
  uploadedDocuments Document[] @relation("UploadedDocuments")
  unlockedDocuments Document[] @relation("UnlockedDocuments")
}

model Document {
  id           String   @id @default(cuid())
  url          String   @unique
  unlockedById String?
  textContent  String
  title        String
  category     String
  subject      Subject
  description  String?
  tags         Tags[]
  authorId     String
  author       User     @relation("UploadedDocuments", fields: [authorId], references: [id])
  unlockedBy   User?    @relation("UnlockedDocuments", fields: [unlockedById], references: [id])
  ContentType  String?
  WordCount    Int?
  Pages        Int?
  Level        String?
  Language     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Subject {
  Mathematics
  Science
  Literature
  History
  Engineering
  Psychology
  Economics
  Law
  Art
  Music
  Geography
  Philosophy
  Business
}

enum Tags {
  Algebra
  Calculus
  Programming
  QuantumMechanics
  WorldHistory
  Genetics
  OrganicChemistry
  Poetry
  Microeconomics
  CivilEngineering
  Ethics
  Painting
  ClassicalMusic
  Cartography
  InternationalRelations
  CognitivePsychology
  SocialTheory
  Marketing
  CorporateLaw
}
